@model List<PW3OrgTareas.Models.Tarea>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Tareas en @ViewBag.NombreCarpeta</h2>

<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Descripcion</th>
                <th>Fecha de Creacion</th>
                <th>Fecha de Fin</th>
                <th>Estimado (hs)</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Nombre</td>
                    <td>@item.Descripcion</td>
                    <td>@item.FechaCreacion.ToString("dd/MM/yyyy")</td>
                    <td>@item.FechaFin.ToString("dd/MM/yyyy")</td>
                    <td>@item.EstimadoHoras</td>
                    <td>
                        <a href="" title="Ver Detalle"><i class="fa fa-tasks"></i></a> | 
                        <a href="" title=""><i class="fa fa-trash-o"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>